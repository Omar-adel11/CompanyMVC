@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="table table-hover table-striped">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Age</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Salary</th>
                <th>Email</th>
                <th>Is Active</th>
                <th>Is Deleted</th>
                <th>Hiring Date</th>
                <th>Date of creation</th>
                <th>Department</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
           
                <tr>
                <td><img src="~/files/images/@Model.ImageName" width="100" height="100" class="img-fluid rounded-circle" /></td>
                <td>@Model.Name</td>
                <td>@Model.Age</td>
                <td>@Model.Phone</td>
                <td>@Model.Address</td>
                <td>@Model.Salary</td>
                <td>@Model.Email</td>
                <td>@Model.IsActive</td>
                <td>@Model.IsDeleted</td>
                <td>@Model.HireDate</td>
                <td>@Model.CreateAt</td>
                <td>@Model.Department?.Name</td>
                    <td>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            
        </tbody>
    </table>
    </tbody>
</table>

