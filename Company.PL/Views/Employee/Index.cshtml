<div id="EmployeesContainer">
@if(Model.Count() > 0 )
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Age</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Salary</th>
                <th>Email</th>
                <th>Is Active</th>
                <th>Is Deleted</th>
                <th>Hiring Date</th>
                <th>Date of creation</th>
                <th>Department</th>
				<th>Details</th>
                <th>Update</th>
				<th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td><img src="~/files/images/@item.ImageName" width="100" height="100" class="img-fluid rounded-circle"/></td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                    <td>@item.Salary</td>
                    <td>@item.Email</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
					<td>@item.HireDate"</td>
                    <td>@item.CreateAt</td>
                    <td>@item.Department?.Name</td>
                    <partial name="_ButtonPartialView" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>


}else
{
    <div class="m4 alert alert-info">
        <h4>There are no Employees</h4>
    </div>
}
</div>


